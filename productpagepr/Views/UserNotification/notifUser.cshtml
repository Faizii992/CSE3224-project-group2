
@using productpagepr.Models;

@model dynamic

@{
    ViewBag.Title = "Usernotification";
}






@foreach (ReplyModel notif in Model.Usernotif)
{

    if (String.Equals(Session["userId"], notif.UserId))
    {

        <div class="content" style="border:1.5px solid #68c3a3;margin-bottom:1px;font-size:20px">
            <p>Your Message Has Been Replied &#128515;</p>
            @* <span class="date">
                @ViewData["fDt"]
                    </spa*@

            <div>
                @using (Html.BeginForm("Reply", "UserNotification", FormMethod.Get))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Id" value="@notif.Id" />
                    <button style="transform:translateY(50%);transform:translateX(230px);margin-bottom:2px;font-size:20px" type="submit" class="btn btn-default ">View Reply</button>

                }
                
            </div>
            
        </div>
    }
}








