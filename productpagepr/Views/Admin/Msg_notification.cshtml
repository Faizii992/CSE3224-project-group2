

@model System.Data.DataTable
@{
    ViewBag.Title = "Msg_notification";
    Layout = "~/Views/Shared/AdminDashboardLayout.cshtml";
}


<body style="background-color:#E5E5E5;">

    <div class="card" style="margin: auto;
        margin-top: 5%;
        height: 700px;
        overflow: scroll;
        overflow-x: hidden;
        width: 80%;">
        <div class="card-body alert alert-success">


            @for (int i = 0; i < Model.Rows.Count; i++)
            {

                <div class="notifi__item my-3" style="display:flex;justify-content:space-between;">

                    <div class="content">
                        <p>You got a  message from @Model.Rows[i][1] </p>
                    </div>


                    <div>
                        @using (Html.BeginForm("HelplineMsg", "Admin", FormMethod.Get))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="Id" value="@Model.Rows[i][0]" />
                            <button class="my-3 btn btn-success" type="submit">View Message</button>

                        }
                    </div>
                </div>
                <hr />
            }
        </div>

    </div>

</body>