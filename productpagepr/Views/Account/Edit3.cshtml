@model productpagepr.Models.User
@{
    ViewBag.Title = "Edit3";
    Layout = null;
}

<link href="~/style/AccountEditPage.css" rel="stylesheet" />
<link href="~/style/commonelememntsaccount.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css"
      integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
@using (Html.BeginForm("Edit3", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()


    <div class="container">
        <div class="panelhead"></div>

        <img src="~/accountimage/editpicture2.png" style="width:500px; height:600px; margin-left:-45px;" />


        <div class="form-horizontal">
            <p class="headings"><u>EDIT YOUR PERSONAL DETAILS</u></p>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.UserID)

            <div class="form-group">
                @Html.LabelFor(model => model.EmailID, "Email Address:", htmlAttributes: new { @class = "control-label col-md-2 " })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control label2", @required = "required", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PhoneNo, "Contact No.:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PhoneNo, new { htmlAttributes = new { @class = "form-control label2", @placeholder = "e.g.:- 01701234567" } });
                    @Html.ValidationMessageFor(model => model.PhoneNo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <p class="link-save">@Html.ActionLink("Already Done?", "Index") <input type="submit" value="Save" class="btn btn-success" /></p>
                </div>
            </div>
        </div>


    </div>

}




